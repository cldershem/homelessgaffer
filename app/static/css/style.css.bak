html, body {
	height: 100%;
	}
body {
	font-family: "Courier New", Courier, Monospace;
	font-size: small;
	color: #ebebeb;
	background-color: #252525;
	margin-top: 0px;
	margin-bottom: 0px;
	width: 61.5em;
	margin-left: auto;
	margin-right: auto;
	}
#allcontent {
	padding: 0px 0px 0px 0px;
	border-left: 3px solid #68A869;
	border-right: 3px solid #68A869;
	background-color: #353535;
	min-height: 100%;
	width: 100%;
	}	
h1, h2, h3 {
	font-weight: normal;
	color: #FFB6C1;
	}
h1 {
	font-size:170%;
	}
h2 {
	font-size: 130%;
	}
h3 {
	font-size: 110%;
	}
li+h3 {
	color: red;
	}
#main {
	xmargin: 0px 10px 100px 0px;
	xwidth: 48em;
	xfloat: left;
	xpadding-left: .8em;
	position: relative;	
	}
#main>h1 { 
	font-weight: bold;
	color: #FFB6C1;
	}
#main>h2 { 
	font-weight: bold;
	color: #FFB6C1;
	}
#main>h3 { 
	font-weight: bold;
	color: #FFB6C1;
	}
#header {
	width: 100%;
	margin: 0px 0px 0px 0px;
	padding: 0px 0px 0px 0px;
	position: relative;
	}
#header h1 {
	font-size: 190%;
	padding: 19px 0px 19px 5px;
	margin: 0px 0px 0px 0px;
	width: 99.7%;
	position: relative;
	}
#header img {
	position: absolute;
	right: 0px;
	top: 0px;
	padding: 0px;
	margin: 0px;
	}
#slogan {
	font-size: 115%;
	font-style: italic;
	color: #FFB6C1;	
	line-height: 1;
	padding: 0px 0px 0px 5px;
	margin-top: 5px;
	}
#slogantwo { 
	text-align: right;
	font-size: 115%;
	font-style: italic;
	color: #FFB6C1;	
	line-height: 1;
	padding: 0px 0px 0px 0px;
	margin-top: 0px;
	}
#header h2 {
	width: 50%;
	margin: 2px 0px 3px 0px;
	}
#navbar {
	font-size: 130%;
	margin: 0px 0px 0px 0px;	
	padding: 0px 0px 0px 0px;
	list-style-type: none;
	background-color: #68A869;
	border-right: 2px solid #353535;
	border-left: 2px solid #353535;
	position: relative;
	}
#navbar li {
	display: inline;
	border-right: 2px solid #353535;
	}
#navbar li:first-child { 
	xborder-left: 2px solid #353535;
	}
#navbar li:last-child {
	border-right: none;
	}
#navbarlogin {
	color:#353535;
	font-size: 75%;
	display: inline-block;
	position: absolute;
	right: .25em;
	top: .15em;
	}
#navbarlogin input {
	height: .9em;
	}
#navbarloginsubmit {
	xbackground-color: blue;
	xcolor: white;
	xfont-size: 100%;
	height: 100em;
    width: 1em;
	}
#navbar li a:link { 
	color:#353535;
	text-decoration: none;
	padding: 0px 6px 0px 6px;
	}
#navbar li a:visited { 
	color:#353535;
	text-decoration: none;
	padding: 0px 6px 0px 6px;
	}
#navbar li a:hover {
	background-color: #ebebeb;
	color: #353535; 
	padding: 0px 6px 0px 6px;
	}
#navbar li.currentpage {
	xborder: 0px 2px 0px 2px solid #FFB6C1;
	background-color: #FFB6C1;
	xbackground-color: #c69AA3;
	}
#header h1 a:active {
	text-decoration: none;
	color: #ebebeb;
	}
#header h1 a:link {
	text-decoration: none;
	color: #ebebeb;
	}
#header h1 a:visited {
	text-decoration: none;
	color: #ebebeb;
	}
#header h1 a:hover {
	background: #ebebeb;
	color: #353535;
	}
#page {
	color: #FFB6C1;
	z-index: 99;
	}
#comments {
	border-top: 2px solid #68A869;
	}
#sidebar ul {
	line-height: 1;
	margin: 0px 0px 10px 0px;
	padding: 0px 5px 0px 0px;
	float: right;
	list-style-type: none;
	text-align: right;
	}
#sidebar ul #extlinks { 
	padding: 0px 0px 0px 0px;
	}
#leftcontent {
	width: 48em;
	float: left;
	padding-left: .8em;
	margin: 0px 10px 100px 0px;
	}
#indexleftcontent {
	width: 40em;
	float: left;
	padding-left: .8em;
	margin: 0px 0px 100px 0px;		
	}
#recentposts {
	float: right;
	width: 32%;
	text-align: right;
	font-size: 80%;
	margin: 0px 0px 100px 0px;
	padding-right: 5px;
	}
#recentposts h1 {
	font-weight: bold;
	}
#recentposts a { 
	text-decoration: none;
	}
#footer {
	text-align: center;
	margin-top: 0px;
	padding: 0px 0px 1px 0px;
	font-size: 75%;
	clear: both;
	}
a:link {
	color: #FFB6C1;
	}
a:visited {
	color: #c69AA3;
	}
a:hover {
	background: #ebebeb;
	color: #353535;
	}
#contactinfo {
	border-spacing: 10px 15px;
	text-align: left;
	}
#contactinfo th {
	font-weight: normal;
	text-align: right;
	}

//battleship css below
#container {
    display: inline-block;
    }
#messages {
    border: 1px solid black;
    height: 5em;
    overflow-y: scroll;
    }
#messages ul {
    list-syle-type: none;
    padding: 0;
    margin-top: 0;
    margin-bottom: 0;
}
